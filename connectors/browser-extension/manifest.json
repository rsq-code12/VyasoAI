{
  "manifest_version": 3,
  "name": "Vyaso AI Capture",
  "version": "0.1.0",
  "description": "Captures page metadata and selections.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Vyaso AI"
  }
}